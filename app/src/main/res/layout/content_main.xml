<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">

    <Button
        android:id="@+id/cmpButton"
        android:layout_width="377dp"
        android:layout_height="44dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="8dp"
        android:onClick="onClick"
        android:text="Find Rate"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/fromAddress_text"
        android:layout_width="172dp"
        android:layout_height="63dp"
        android:layout_marginTop="44dp"
        android:ems="10"
        android:hint="From"
        android:inputType="textPostalAddress"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/toAddress_text"
        android:layout_width="248dp"
        android:layout_height="72dp"
        android:layout_marginTop="110dp"
        android:ems="10"
        android:hint="To"
        android:inputType="textPostalAddress"
        app:layout_constraintHorizontal_bias="0.738"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/weight"
        android:layout_width="188dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="168dp"
        android:ems="10"
        android:hint="Weight (g)"
        android:inputType="numberDecimal"
        app:layout_constraintRight_toLeftOf="@id/height"
        app:layout_constraintTop_toBottomOf="@id/toAddress_text" />

    <EditText
        android:id="@+id/height"
        android:layout_width="167dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="height(cm)"
        android:inputType="numberDecimal"
        app:layout_constraintHorizontal_bias="0.865"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="350dp" />

    <EditText
        android:id="@+id/width"
        android:layout_width="187dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="width(cm)"
        android:inputType="numberDecimal"
        app:layout_constraintRight_toLeftOf="@id/length"
        app:layout_constraintTop_toBottomOf="@id/weight" />

    <EditText
        android:id="@+id/length"
        android:layout_width="169dp"
        android:layout_height="47dp"
        android:layout_marginLeft="64dp"
        android:ems="10"
        android:hint="length(cm)"
        android:inputType="numberDecimal"
        app:layout_constraintLeft_toRightOf="@id/width"
        app:layout_constraintTop_toBottomOf="@id/height" />

</android.support.constraint.ConstraintLayout>