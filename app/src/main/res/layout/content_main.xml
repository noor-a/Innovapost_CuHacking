    <EditText
        android:id="@+id/weight"
        android:layout_width="189dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="Weight (g)"
        android:inputType="numberDecimal"
        android:text="5"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/height"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/from_scroll" />

    <EditText
        android:id="@+id/height"
        android:layout_width="195dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="height(cm)"
        android:inputType="numberDecimal"
        android:text="5"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="@id/weight"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/to_scroll" />

    <EditText
        android:id="@+id/width"
        android:layout_width="187dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="width(cm)"
        android:inputType="numberDecimal"
        android:text="5"
        app:layout_constraintRight_toLeftOf="@id/length"
        app:layout_constraintTop_toBottomOf="@id/weight" />

    <EditText
        android:id="@+id/length"
        android:layout_width="189dp"
        android:layout_height="47dp"
        android:layout_marginLeft="124dp"
        android:ems="10"
        android:hint="length(cm)"
        android:inputType="numberDecimal"
        android:text="5"
        app:layout_constraintLeft_toRightOf="@id/width"
        app:layout_constraintTop_toBottomOf="@id/height" />


</android.support.constraint.ConstraintLayout>