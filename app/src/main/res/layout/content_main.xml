<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">

    <Button
        android:id="@+id/cmpButton"
        android:layout_width="377dp"
        android:layout_height="44dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="8dp"
        android:onClick="onClick"
        android:text="Find Rate"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <ScrollView
        android:id="@+id/from_scroll"
        android:layout_width="189dp"
        android:layout_height="318dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout
            android:layout_width="193dp"
            android:layout_height="318dp"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp">

            <TextView
                android:id="@+id/editText2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="From"
                android:textSize="16dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/fromStreet1"
                android:layout_width="248dp"
                android:layout_height="63dp"
                android:ems="10"
                android:hint="Street 1"
                android:text="453 Sunnyside Ave"
                app:layout_constraintHorizontal_bias="0.742"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/fromStreet2"
                android:layout_width="248dp"
                android:layout_height="63dp"
                android:hint="Street 2" />

            <EditText
                android:id="@+id/from_city"
                android:layout_width="248dp"
                android:layout_height="63dp"
                android:text="Ottawa"
                android:hint="City" />

            <EditText
                android:id="@+id/from_state"
                android:layout_width="248dp"
                android:layout_height="63dp"
                android:text="ON"
                android:hint="State/Province" />

            <EditText
                android:id="@+id/from_postal_code"
                android:layout_width="248dp"
                android:layout_height="63dp"
                android:text="K1S0S8"
                android:hint="Zip/Postal Code" />

            <EditText
                android:id="@+id/from_country"
                android:layout_width="248dp"
                android:layout_height="63dp"
                android:text="CA"
                android:hint="Country" />

        </LinearLayout>
    </ScrollView>

    <ScrollView
        android:id="@+id/to_scroll"
        android:layout_width="185dp"
        android:layout_height="318dp"
        app:layout_constraintLeft_toRightOf="@id/from_scroll"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout
            android:layout_width="193dp"
            android:layout_height="318dp"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp">

            <TextView
                android:id="@+id/editText3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="To"
                android:textSize="16dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/toStreet1"
                android:layout_width="248dp"
                android:layout_height="63dp"
                android:ems="10"
                android:hint="Street 1"
                android:text="1125 Coronel By Drive"
                app:layout_constraintHorizontal_bias="0.742"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/toStreet2"
                android:layout_width="248dp"
                android:layout_height="63dp"
                android:hint="Street 2" />

            <EditText
                android:id="@+id/to_city"
                android:layout_width="248dp"
                android:layout_height="63dp"
                android:text="Ottawa"
                android:hint="City" />

            <EditText
                android:id="@+id/to_state"
                android:layout_width="248dp"
                android:layout_height="63dp"
                android:text="ON"
                android:hint="State/Province" />

            <EditText
                android:id="@+id/to_postal_code"
                android:layout_width="248dp"
                android:layout_height="63dp"
                android:text="K1S5B6"
                android:hint="Zip/Postal Code" />

            <EditText
                android:id="@+id/to_country"
                android:layout_width="248dp"
                android:layout_height="63dp"
                android:text="CA"
                android:hint="Country" />

        </LinearLayout>
    </ScrollView>

